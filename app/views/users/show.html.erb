<div class="flash"><%= flash[:success] %></div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/users', user: @user %><!--users info部分テンプレート呼び出し-->
      <%= render 'books/books', book: @book %><!--new book部分テンプレート呼び出し-->
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

      <% @books.each do |book| %>
       <tr>
        <td><%= link_to user_path(@user) do %>
               <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %></td>
            <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
       </tr>
      <% end %>
     </table>
    </div>
 </div>
</div>