
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/users', user: @user %><!--users info部分テンプレート呼び出し-->
      <%= render 'books/books', book: @book %><!--new book部分テンプレート呼び出し-->
    </div>

   <div class='col-md-8 offset-md-1'>
    <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
          </tr>
        </thead>

      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
       <% end %>
      </table>
     </div>
 </div>
</div>

