<%= render 'users/users', book: @book %><!--users info部分テンプレート呼び出し-->


<h1>Books</h1>

<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</thead>


<% @books.each do |book| %>
<% @profile_image.each do |profile_image| %>
  <tr>
    <td><%=attachment_image_tag profile_image %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
<% end %>
</table>